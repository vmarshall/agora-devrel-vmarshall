# Agora
NEXT_PUBLIC_AGORA_APP_ID=your_agora_app_id
AGORA_APP_CERTIFICATE=your_agora_app_certificate
AGORA_RTC_TOKEN_TTL=3600

# Conversational AI Engine REST (Agora)
AGORA_CUSTOMER_ID=your_customer_id
AGORA_CUSTOMER_SECRET=your_customer_secret
# NOTE: For join/speak we use the official v2 endpoints with APP_ID in path.
# AGORA_AI_ENGINE_BASE is not required anymore but kept for compatibility.
AGORA_AI_ENGINE_BASE=https://api.agora.io/api/conversational-ai-agent/v2

# OpenAI (LLM + TTS)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_LLM_MODEL=gpt-4o-mini

# TTS overrides (agent & /api/tts/speak)
OPENAI_TTS_MODEL=gpt-4o-mini-tts
OPENAI_TTS_VOICE=alloy
OPENAI_TTS_FORMAT=mp3

# Optional
NEXT_PUBLIC_DEFAULT_CHANNEL=promer-demo